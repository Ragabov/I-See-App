<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.ragab.ahmed.educational.happenings.ui.favourites.AddFavouriteActivity"
    android:orientation="vertical" android:weightSum="20">

    <fragment
        android:layout_width="match_parent"
        android:layout_height="0dp" android:layout_weight="16" android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment" />

    <EditText
        android:id="@+id/favourite_name_text"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:hint="Enter a name for the location"
        android:inputType="textPersonName|textAutoComplete|textShortMessage"
        android:textSize="@dimen/abc_text_size_medium_material"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:weightSum="4"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/add_favourite_btn"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="match_parent"
            android:src="@android:drawable/ic_menu_save"
            android:background="#99cc00"
            />

        <ImageButton
            android:id="@+id/cancel_favourite_btn"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="match_parent"
            android:src="@android:drawable/ic_menu_close_clear_cancel"
            android:background="#ff4444"
            />

        </LinearLayout>

</LinearLayout>
