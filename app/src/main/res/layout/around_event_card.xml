<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:id="@+id/around_card_view"
    android:layout_gravity="center"
    android:layout_width="match_parent"
    android:layout_height="210dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="7dp"
    android:layout_marginBottom="7dp"
    card_view:cardCornerRadius="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:paddingTop="5dp">

        <LinearLayout
            android:minWidth="50dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="8dp"
            android:gravity="center_horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/event_card_icon"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/ic_whatshot_black_24dp"
                app:civ_border_width="10dp"
                app:civ_border_color="@color/color_accent"/>

            <TextView
                android:id="@+id/event_card_user_txt"
                android:paddingTop="10dp"
                android:text="Ahmed Ragab"
                android:textSize="@dimen/abc_text_size_subhead_material"
                android:textColor="@color/primary_text"
                android:gravity="center"
                android:fontFamily="sans-serif-light"
                android:layout_width="101dp"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/event_card_time_txt"
                android:paddingTop="2dp"
                android:text="5 minutes ago"
                android:textSize="@dimen/abc_text_size_small_material"
                android:textColor="@color/secondary_text"
                android:layout_width="101dp"
                android:layout_height="wrap_content" />
            </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="8dp" >

            <TextView
                android:id="@+id/event_card_name_txt"
                android:text="Event Name "
                android:textSize="@dimen/abc_text_size_headline_material"
                android:textColor="@color/primary_text"
                android:fontFamily="sans-serif-condensed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/event_card_description_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="130dp"
                android:maxLines="7"
                android:textColor="@color/secondary_text"
                android:paddingTop="5dp"
                android:text="This is a cribtion for thribtion for thribtion for thribtion for thribtion for thribtion for thribtion for the eventtThidescribtion for the eventtThis is a describtion for the eventt This is a describtion for the eventt This is a describtion for the eventt This is a describtion for the eventt"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:gravity="right"
                android:paddingRight="15dp"
                android:paddingBottom="2dp"
                android:weightSum="3"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/event_card_confirm_btn"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:tint="@color/color_accent"
                    android:src="@drawable/abc_btn_check_to_on_mtrl_015"
                    android:clickable="true"/>
                <ImageView
                    android:id="@+id/event_card_disconfirm_btn"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:tint="@color/color_accent"
                    android:layout_height="wrap_content"
                    android:src="@android:drawable/ic_menu_close_clear_cancel"
                    android:clickable="true"/>
                <ImageView
                    android:id="@+id/event_card_show_btn"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:tint="@color/color_accent"
                    android:src="@android:drawable/ic_dialog_map"
                    android:clickable="true"/>

                </LinearLayout>
        </LinearLayout>

        </LinearLayout>
</android.support.v7.widget.CardView>